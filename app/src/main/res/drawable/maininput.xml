<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/secondBlue" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <!--  left shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="#00000000"
                android:centerX="0.99"
                android:endColor="@color/firstGrey"
                android:startColor="@color/secondBlue" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <!--  right shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:centerColor="#00000000"
                android:centerX="0.99"
                android:endColor="@color/firstGrey"
                android:startColor="#00FF0000" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <!--  top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#00000000"
                android:centerY="0.9"
                android:endColor="@color/firstGrey"
                android:startColor="#2B000000" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <!-- bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#00000000"
                android:centerY="0.9"
                android:endColor="@color/firstGrey"
                android:startColor="#2B000000" />
            <corners android:radius="0dp" />
        </shape>
    </item>
</layer-list>